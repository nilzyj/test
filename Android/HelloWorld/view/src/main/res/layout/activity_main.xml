<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.view.MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:layout_below="@+id/img"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="输入用户名"
        android:textSize="5sp"
        android:layout_alignBaseline="@+id/text_id"
        android:layout_alignBottom="@+id/text_id"
        android:layout_toRightOf="@+id/text_id"
        android:layout_toEndOf="@+id/text_id" />

    <TextView
        android:id="@+id/text_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:layout_below="@+id/id"
        android:layout_alignLeft="@+id/text_id"
        android:layout_alignStart="@+id/text_id" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/id"
        android:layout_alignLeft="@+id/id"
        android:layout_alignStart="@+id/id" />
</RelativeLayout>
